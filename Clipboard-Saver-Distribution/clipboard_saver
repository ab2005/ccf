#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Check if python3 is available
if ! command -v python3 &> /dev/null; then
    echo "âŒ Python 3 is required but not installed."
    echo "ğŸ“¥ Please install Python 3 from python.org or using Homebrew: brew install python"
    exit 1
fi

# Check if tkinter is available
if ! python3 -c "import tkinter" 2>/dev/null; then
    echo "âŒ Python tkinter is required but not installed."
    echo "ğŸ“¥ Please install it using: brew install python-tk"
    exit 1
fi

# Run the clipboard saver
cd "$SCRIPT_DIR"
python3 clipboard_saver.py
